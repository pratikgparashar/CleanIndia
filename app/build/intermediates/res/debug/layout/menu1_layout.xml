<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu1"

   >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/oval"
    android:layout_margin="10dp"

    android:layout_width="wrap_content" android:layout_height="wrap_content">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/SrcImage"
        android:src="@color/button_material_light"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_margin="30dp"

        android:background="@drawable/oval"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Click Photo"
        android:id="@+id/clickPhoto"
        android:gravity="center"
        android:focusable="true"
        android:textColor="@color/abc_primary_text_material_dark"
        android:background="@color/material_blue_grey_900"
        android:layout_alignBottom="@+id/SrcImage"
        android:layout_alignLeft="@+id/SrcImage"
        android:layout_alignStart="@+id/SrcImage"
        android:layout_alignRight="@+id/SrcImage"
        android:layout_alignEnd="@+id/SrcImage" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "Name :"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/nameText"
        android:layout_below="@+id/clickPhoto"
        android:layout_alignLeft="@+id/SrcImage"
        android:layout_alignStart="@+id/SrcImage"
        android:layout_alignRight="@+id/SrcImage"
        android:layout_alignEnd="@+id/SrcImage" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint=""
        android:layout_marginTop="5dp"
        android:ems="10"
        android:id="@+id/name"

        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/clickPhoto"
        android:layout_alignStart="@+id/clickPhoto"
        android:layout_alignRight="@+id/clickPhoto"
        android:layout_alignEnd="@+id/clickPhoto"
        android:padding="8dp"
        android:background="@drawable/round"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "Email :"
        android:textSize="15dp"
        android:id="@+id/nameEmail"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"

        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="5dp"
        android:id="@+id/email"
        android:layout_below="@+id/nameEmail"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:padding="8dp"
        android:background="@drawable/round"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "Mobile Number :"
        android:textSize="15dp"
        android:id="@+id/namePhone"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"

        android:id="@+id/phone"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/namePhone"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:padding="8dp"
        android:background="@drawable/round"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_below="@+id/location"
        android:layout_alignRight="@+id/phone"
        android:layout_alignEnd="@+id/phone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonshape"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:id="@+id/location"
        android:layout_margin="10dp"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_alignRight="@+id/phone"
        android:layout_alignEnd="@+id/phone"
        android:layout_below="@+id/phone" />


</RelativeLayout>
